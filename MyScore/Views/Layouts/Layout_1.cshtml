                                <div class="dropdown">
                                    <button class="btn btn-dark dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                        Create
                                    </button>
                                    <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                        <a class="dropdown-item" href="~/Create/Match">Match</a>
                                        <a class="dropdown-item" href="~/Create/Club">Club</a>
                                        <a class="dropdown-item" href="~/Create/League">League</a>
                                        <a class="dropdown-item" href="~/Create/Stadium">Stadium</a>
                                    </div>
                                </div>
                            </li>
                            <li class="nav-item dropdown">
                                <button class="btn btn-dark dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    Edit
