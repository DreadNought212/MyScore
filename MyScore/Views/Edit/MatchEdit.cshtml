@using MyScore.ViewModels
@using MyScore.Models
@model MatchClubLeagueModel
@{
    Layout = "~/Views/Layouts/Layout_2.cshtml";
}
<form method="post" class="text-center">
    <input type="hidden" value="@ViewBag.MatchId" name="Id" />
    <input type="hidden" value="@ViewBag.LeagueId" name="League_id" />
    <div class="container">
        <div class="row">
            <div class="col">
                <h1>Select competition:</h1>
                <select name="League_id" class="custom-select league-select">
                    <option value="-1">Select league</option>
                    @foreach (League league in Model.Leagues)
                    {
                        @if (league.Id == ViewBag.LeagueId)
                        {
                            <option value="@league.Id" selected>@league.Name</option>
                        }
                        else
                        {
                            <option value="@league.Id">@league.Name</option>
                        }
                    }
                </select>
            </div>
        </div>
        <div class="row">
            <div class="col">
                <h1>Host team:</h1>
                <select name="Host_team_id" class="custom-select host-team-select">
                    <option value="-1">Select club</option>
                    @foreach (Club club in Model.Clubs)
                    {
                        @if (club.Id == ViewBag.HostTeamId)
                        {
                            <option data-item="@club.Home_league_id" value="@club.Id" selected>@club.Name</option>
                        }
                        else
                        {
                            <option data-item="@club.Home_league_id" value="@club.Id">@club.Name</option>
                        }
                    }
                </select>
            </div>
            <div class="col">
                <h1>Guest team:</h1>
                <select name="Guest_team_id" class="custom-select guest-team-select">
                    <option value="-1">Select club</option>
                    @foreach (Club club in Model.Clubs)
                    {
                        @if (club.Id == ViewBag.GuestTeamId)
                        {
                            <option data-item="@club.Home_league_id" value="@club.Id" selected>@club.Name</option>
                        }
                        else
                        {
                            <option data-item="@club.Home_league_id" value="@club.Id">@club.Name</option>
                        }
                    }
                </select>
            </div>
        </div>
        <div class="row">
            <div class="col">
                <h1>Score</h1>
            </div>
        </div>
        <div class="row">
            <div class="col">
                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text">Home goals</span>
                    </div>
                    <input type="text" id="score" name="Score" value="@ViewBag.Score" 
                           placeholder="Score" class="form-control text-center" />
                    <div class="input-group-append">
                        <span class="input-group-text">Guest goals</span>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col">
                <h1>Date</h1>
                <input type="date" value="@ViewBag.Date" name="Date" class="form-control" />
            </div>
            <div class="col">
                <h1>Stadium</h1>
                <select name="Stadium_id" class="custom-select">
                    @foreach (Stadium stadium in Model.Stadiums)
                    {
                        @if (stadium.Id == ViewBag.StadiumId)
                        {
                            <option value="@stadium.Id" selected>@stadium.Name</option>
                        }
                        else
                        {
                            <option value="@stadium.Id">@stadium.Name</option>
                        }
                    }
                </select>
            </div>
        </div>
        <br />
        <div class="row">
            <div class="col">
                <button class="btn btn-outline-secondary btn-lg" type="submit">Edit</button>
            </div>
        </div>
    </div>
</form>