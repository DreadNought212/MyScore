@using MyScore.ViewModels
@using MyScore.Models
@model MatchClubLeagueModel
@{
    Layout = "~/Views/Layouts/Layout_2.cshtml";
}
    <form method="post" class="text-center">
        <input type="hidden" value="@ViewBag.LeagueId" name="Id" />
        <h1>League name</h1>
        <input type="text" class="form-control" value="@Model.Leagues.Where(x => x.Id == ViewBag.LeagueId).First().Name" name="Name" />
        <h1>League country</h1>
        <select name="Country_id" class="custom-select">
            @foreach (Country country in Model.Countries)
            {
                @if (country.Id == ViewBag.CountryId)
                {
                    <option value="@country.Id" selected>@country.Name</option>
                }
                else
                {
                    <option value="@country.Id">@country.Name</option>
                }
            }
        </select>
        <br>
        <br />
        <input type="submit" value="Edit" class="btn btn-outline-secondary btn-lg" />
    </form>
